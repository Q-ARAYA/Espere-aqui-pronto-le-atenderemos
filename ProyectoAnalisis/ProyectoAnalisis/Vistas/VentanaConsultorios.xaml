<Window x:Class="ProyectoAnalisis.Vistas.VentanaConsultorios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoAnalisis.Vistas"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1440" Background="#FF345C83">

    <Grid>
        <!-- Fondo ya existente -->
        <Border BorderBrush="#FF6AA169" BorderThickness="1" HorizontalAlignment="Center" Height="213" Margin="0,527,0,0" VerticalAlignment="Top" Width="1440" Background="#FF6AA169">
            <Border BorderThickness="1" HorizontalAlignment="Center" Height="91" VerticalAlignment="Center" Width="1440" Background="#FFB7B7B7"/>
        </Border>

        <!-- Panel dinámico donde se colocarán los cuadros de consultorios -->
        <WrapPanel x:Name="PanelConsultorios" Margin="10" Orientation="Horizontal" />

        <!-- Panel donde se colocarán los círculos de los pacientes -->
        <WrapPanel x:Name="PanelPacientes" Margin="20,250,20,100" />
    </Grid>
</Window>
