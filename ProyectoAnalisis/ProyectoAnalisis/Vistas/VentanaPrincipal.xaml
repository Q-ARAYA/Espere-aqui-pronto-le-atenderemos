                   Foreground="White"
                   Margin="30,20,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>

        <!-- Panel con los botones principales del sistema -->
        <!-- Cargar datos, abrir pacientes, abrir especialidades y optimizar -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,20,30,0">
            <Button Content="Cargar Datos"
                    Width="150"
                    Height="40"
                    FontSize="16"
                    Margin="0,0,10,0"
                    Background="#6AA169"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnCargarDatos_Click"/>
            <Button Content="Pacientes"
                    Width="150"
                    Height="40"
                    FontSize="16"
                    Margin="0,0,10,0"
                    Background="#6AA169"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnPacientes_Click"/>
            <Button Content="Especialidades"
                    Width="150"
                    Height="40"
                    FontSize="16"
                    Margin="0,0,10,0"
                    Background="#6AA169"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnEspecialidades_Click"/>
            <Button x:Name="btnOptimizar"
                    Content="Optimizar"
                    Width="150"
                    Height="40"
                    FontSize="16"
                    Margin="0,0,10,0"
                    Background="#6AA169"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="btnIniciarOptimizacion_Click"/>
            <!-- Cada boton tiene su evento Click configurado -->
        </StackPanel>

