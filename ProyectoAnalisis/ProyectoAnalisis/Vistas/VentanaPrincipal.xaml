<Window x:Class="ProyectoAnalisis.Vistas.VentanaPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consultorios" Height="750" Width="1440" Background="#3B5C7E">
    <Grid>
        <!-- Título superior -->
        <TextBlock Text="Espere aquí pronto le atenderemos"
                   FontSize="32"
                   FontFamily="Comic Sans MS"
                   Foreground="White"
                   Margin="30,20,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"/>
        
        <Button Content="Especialidades"
                Width="150"
                Height="40"
                FontSize="16"
                Margin="0,20,30,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="#6AA169"
                Foreground="White"
                FontWeight="Bold"
                BorderThickness="0"
                Cursor="Hand"
                Click="btnEspecialidades_Click"/>

        <!-- Consultorios (cabecera) -->
        <UniformGrid Rows="1" Columns="15" Margin="30,80,30,0" Height="60" VerticalAlignment="Top">
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10"
                    MouseLeftButtonUp="Consultorio_Click">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <!-- Repite este Border hasta tener 15 consultorios -->
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
            <Border Background="White" CornerRadius="10" Margin="5" Padding="10">
                <TextBlock Text="Consultorio" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Border>
        </UniformGrid>

        <!-- Border verde inferior (debe ir ANTES del panel blanco para quedar debajo) -->
        <Border Background="#6AA169" Height="220" VerticalAlignment="Bottom" Margin="0,0,0,0">
            <Border Background="#B7B7B7" Height="70" VerticalAlignment="Center" Margin="0,0,0,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="&#xE823;" FontFamily="Segoe MDL2 Assets" FontSize="28" Margin="0,0,10,0"/>
                    <TextBlock Text="Lista de espera" FontSize="18" VerticalAlignment="Center" Margin="0,0,30,0"/>
                    <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="32" Margin="5,0"/>
                    <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="32" Margin="5,0"/>
                    <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="32" Margin="5,0"/>
                </StackPanel>
            </Border>
        </Border>

        <!-- Panel principal de consultorios y pacientes -->
        <Border Margin="20,150,20,180" Background="White" CornerRadius="20" BorderBrush="#B7B7B7" BorderThickness="6">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <UniformGrid Rows="1" Columns="15" Margin="10">
                    <!-- Repite este StackPanel para cada consultorio -->
                    <StackPanel Width="70">
                        <Border Background="#AFC3D6" CornerRadius="15" Padding="5" Height="350" Width="60">
                            <StackPanel VerticalAlignment="Top">
                                <!-- Repite este icono para cada paciente en el consultorio -->
                                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="28" HorizontalAlignment="Center" Margin="0,8"/>
                                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="28" HorizontalAlignment="Center" Margin="0,8"/>
                                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="28" HorizontalAlignment="Center" Margin="0,8"/>
                                <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" FontSize="28" HorizontalAlignment="Center" Margin="0,8"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <!-- Repite este StackPanel para cada consultorio -->
                    <!-- ...repite hasta 15 consultorios -->
                </UniformGrid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>