<Window x:Class="ProyectoAnalisis.Vistas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bienvenido" Height="400" Width="600">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Bienvenido al sistema" FontSize="20" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <!-- ComboBox consultorios -->
            <TextBlock Text="Seleccione número de consultorios:"/>
            <ComboBox x:Name="comboConsultorios" Width="200">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="11"/>
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="13"/>
                <ComboBoxItem Content="14"/>
                <ComboBoxItem Content="15"/>
            </ComboBox>

            <!-- Algunas especialidades -->
            <TextBlock Text="Seleccione especialidades:" Margin="0,20,0,0"/>
            <WrapPanel>
                <CheckBox Content="Cardiología" Margin="10"/>
                <CheckBox Content="Pediatría" Margin="10"/>
                <CheckBox Content="Dermatología" Margin="10"/>
                <CheckBox Content="Ginecología" Margin="10"/>
                <CheckBox Content="Neurología" Margin="10"/>
            </WrapPanel>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Generar" Width="100" Click="BtnGenerar_Click" Margin="10"/>
                <Button Content="Salir" Width="100" Click="BtnSalir_Click" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

